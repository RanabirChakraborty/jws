# {{ ansible_managed }}
# Systemd unit file for default tomcat
[Unit]
Description={{ tomcat.service.hr_name }}
After=syslog.target network.target

[Service]
Type={{ tomcat.service.type }}
EnvironmentFile={{ tomcat.service.conf }}
ExecStart={{ tomcat.service.script }} start
PIDFile={{ tomcat.service.pidfile }}
#SuccessExitStatus=143
User={{ tomcat.user }}
UMask=027

[Install]
WantedBy=multi-user.target
